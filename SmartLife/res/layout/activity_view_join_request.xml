<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<include 
	    android:id="@+id/layout_top"
	    android:layout_alignParentTop="true"
	    layout="@layout/layout_top" />
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:layout_centerHorizontal="true"
    	android:padding="10dp" >

	    <TextView
	        android:id="@+id/text_join_request_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="5dp"
			android:textColor="#000000"
	        android:text="@string/text_join_request_list"
	        android:textAppearance="?android:attr/textAppearanceLarge"  />
	    
	    <View 
	        android:id="@+id/view_divider_request_list"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:layout_below="@+id/text_join_request_list"
	        android:background="#a5a5a5"/>

	    <ListView
	        android:id="@+id/list_request"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/view_divider_request_list"
	        android:layout_centerHorizontal="true" >
	    </ListView>
    	
	</RelativeLayout>
    
</RelativeLayout>
