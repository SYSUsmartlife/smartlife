<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/task_list_item_ll"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="5dp" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/list_item_shadow"
		android:padding="6dp" >

		<LinearLayout
			android:id="@+id/list_item_ll_time_range"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:background="#828"
			android:orientation="vertical"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp" >

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="07:00"
				android:textColor="#fff"
				android:textSize="28dp"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#fff"
				android:paddingLeft="35dp"
				android:paddingRight="35dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="08:00"
				android:textColor="#fff"
				android:textSize="28dp"
				android:textStyle="bold" />
		</LinearLayout>

		<TextView
			android:id="@+id/list_item_tv_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/list_item_tv_is_reminded"
			android:layout_alignTop="@+id/list_item_ll_time_range"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/list_item_ll_time_range"
			android:gravity="center_vertical"
			android:text="@string/app_name"
			android:textSize="20dp" />

		<TextView
			android:id="@+id/list_item_tv_is_reminded"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/list_item_ll_time_range"
			android:layout_alignLeft="@id/list_item_tv_content"
			android:text="@string/frequence_no_repeat"
			android:textColor="@color/light_gray" />
	</RelativeLayout>

</LinearLayout>